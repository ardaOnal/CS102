package shapes;

public class Circle extends Shape
{
   // properties
   int radius;
   
   // constructors
   public Circle( int radius)
   {
      this.radius = radius;
   }
   
   // methods
   public double getArea()
   {
      return Math.PI * radius * radius;
   }
   
   @Override
   public String toString()
   {
      return "Circle with area " + getArea() + " and radius with " + radius + ".";
   }
}
